
<div class="container container-fluid m-5">
    @model RankingDocentes.Models.Usuario

    @{
        ViewBag.Title = "Ingresar Credenciales";
    }

    <h2>@ViewBag.Title.</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Usuario", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    if (ViewBag.Error != null)
                    {<p class="text-danger">@ViewBag.Error</p>}
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.cCorreo, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.cCorreo, new { @class = "form-control", autofocus = "autofocus", @style = "max-width: 280px;" })
                        @Html.ValidationMessageFor(m => m.cCorreo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.cContrasena, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.cContrasena, new { @class = "form-control", @style = "max-width: 280px;" })
                        @Html.ValidationMessageFor(m => m.cContrasena, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group form-row text-justify">
                    <div class="col-md-2">
                        <input type="submit" value="Ingresar" class="btn btn-danger" />
                    </div>
                    <div class="col-md-10">
                        @Html.ActionLink("Restarurar Contraseña?", "RestaurarContraseña", "Usuario", null, new { @class = "btn-sm" })
                    </div>
                </div>
            }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
