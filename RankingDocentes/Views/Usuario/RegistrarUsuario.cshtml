
@using System.Web.Mvc.Html;
@model RankingDocentes.Models.UsuarioSistemaViewModel

@{
    ViewBag.Title = "RegistrarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("RegistrarUsuario", "Usuario", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <div class="row m-1">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="container m-5">
                <form>
                    <fieldset>

                        <legend>

                            Datos del <small> Alumno</small>
                        </legend>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group row">
                            <div class="col">
                                <label>Nombres :</label>
                            </div>
                            <div class="col">
                              
                                @Html.EditorFor(model => model.cNombres, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <label>Apellido Paterno :</label>
                            </div>
                            <div class="col">
                                @Html.EditorFor(model => model.cUsuApePaterno, new { @class = "form-control" })

                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <label>Apellido Materno :</label>
                            </div>
                            <div class="col">
                                @Html.EditorFor(model => model.cUsuApeMaterno, new { @class = "form-control" })

                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <label>Carrera :</label>
                            </div>
                            <div class="col">
                                @Html.DropDownListFor(model => model.nIdCarrera,new SelectList(Model.lstCarreras, "nIdCarrera", "cNombre"), "Select")
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <label>Correo :</label>
                            </div>
                            <div class="col">
                                @Html.EditorFor(model => model.cCorreo, new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <label>Contraseña :</label>
                            </div>
                            <div class="col">
                                @Html.EditorFor(model => model.cContraseña, new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <label>Repetir contraseña :</label>
                            </div>
                            <div class="col">
                                @Html.EditorFor(model => model.cConfirmarContraseña, new { @class = "form-control" })

                            </div>
                        </div>
                        <p class="text-sm-right m-4">
                            <h5><strong>(*) Todos los campos son obligatorios</strong></h5>
                        </p>
                        <div class="container text-center w-50">
                            <input type="submit" value="Registrar" class="btn btn-danger btn-block" />
                        </div>

                    </fieldset>
                </form>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>

}

